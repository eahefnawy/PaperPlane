{
  "lambda": {
    "envVars": [
      "EMAIL_SERVICE",
      "EMAIL_SERVICE_USER",
      "EMAIL_SERVICE_PASS"
    ],
    "deploy": true,
    "package": {
      "optimize": {
        "builder": false,
        "minify": true,
        "ignore": [],
        "exclude": [
          "aws-sdk",
          "email-templates"
        ],
        "includePaths": []
      },
      "excludePatterns": []
    },
    "cloudFormation": {
      "Description": "",
      "Handler": "aws_modules/awsm-mailer/send/handler.handler",
      "MemorySize": 1024,
      "Runtime": "nodejs",
      "Timeout": 6
    }
  },
  "apiGateway": {
    "deploy": false,
    "cloudFormation": {
      "Type": "AWS",
      "Path": "awsm-mailer/send",
      "Method": "POST",
      "AuthorizationType": "none",
      "ApiKeyRequired": false,
      "RequestTemplates": {},
      "RequestParameters": {},
      "Responses": {
        "400": {
          "statusCode": "400"
        },
        "default": {
          "statusCode": "200",
          "responseParameters": {},
          "responseTemplates": {
            "application/json": ""
          }
        }
      }
    }
  }
}
